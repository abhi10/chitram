{
  "name": "image-gallery-browser-tests",
  "version": "1.0.0",
  "description": "UI automation tests for Image Hosting App using kai-browser-skill pattern",
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:ui": "bun run examples/comprehensive-test.ts",
    "test:smoke": "bun run examples/smoke-test.ts",
    "verify:home": "bun run tools/gallery-test.ts verify-home",
    "verify:upload": "bun run tools/gallery-test.ts verify-upload",
    "verify:login": "bun run tools/gallery-test.ts verify-login",
    "screenshot:home": "bun run tools/gallery-test.ts screenshot http://localhost:8000 screenshots/home.png",
    "screenshot:all": "bun run examples/screenshot-all.ts"
  },
  "dependencies": {
    "playwright": "^1.48.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.0.0"
  }
}
